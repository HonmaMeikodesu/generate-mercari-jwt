{
  "include": ["src/**/*"],
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap":true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "pretty": true,
    "declaration": true,
    "typeRoots": [ "./node_modules/@types"],
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
